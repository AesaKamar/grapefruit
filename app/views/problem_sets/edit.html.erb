<%= breadcrumbs([
      link_to("All Courses", courses_path),
      link_to(@course.name, course_path(@course)),
      link_to(@capsule.name, [@course, @capsule]),
      link_to('Edit #{@problem_set.name} from #{@capsule.name}', void, class: "current")
    ])
%>

<div class="landing">
  
  <div class="description">
    <h2>Edit <%= @problem_set.name %> from <%= @capsule.name %></h2>
  </div>

  <div class="login">
    <%= form_for [@course, @capsule, @problem_set] do |f| %>
      <%= render "problem_sets/forms", f: f %>
      <div><%= f.submit "Save Problem Set", class: "button small" %></div>
    <% end %>

    <div id="problemCreate" style="margin-bottom: 20px;">
      <div style="padding-bottom: 20px;">Note: enclose mathematical expresses in backticks (`), entered using shift+tilde (~).</div>

      <div id="problems">
        <%= render @problem_set.problems %>
      </div>

      <button class="button small" id="addProblem">Add Problem</button>
    </div>
  </div>

</div>

<script type="text/javascript"
  src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=AM_HTMLorMML-full">
</script>
