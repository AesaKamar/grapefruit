<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "home", "data-turbolinks-track" => true %>
<% end %>

<% content_for :content do %>

  <div class="top-bar-container">
    <nav class="top-bar" data-options="is_hover:false">
      <ul class="title-area">
        <%= image_tag 'grapefruit_logo-topbar.png' %>
      </ul>
      
      <section class="top-bar-section">
            <ul class="right">

              <li class="has-dropdown click">
                <a href="#">
                  <%= current_user.display_identifier %>
                </a>
                <ul class="dropdown"><li class="title back js-generated"><h5><a href="#">Back</a></h5></li>
                  <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
      
            </ul>
          </section>
    </nav>
  </div>

  <div class="main-content">
    <%= yield %>
  </div>

<% end %>

<%= render template: 'layouts/application' %>