<div class="page-header-container">
  <div class="page-header">
    <div class="page-header-left">
      <h1 class="title">Welcome <%= current_user.display_identifier %>!</h1>
      <!-- if @course.description.empty? -->
      <% if can? :manage_admins, User %>
        <p class="description">You have administrator permissions. Manage your courses and profile using the links in the upper right hand corner.</p>
      <% else %>
        <p class="description">Your personal dashboard to manage your courses and profile.</p>
      <% end %>
      <!-- endif -->
    </div>
    <div class="page-header-right">
    </div>
  </div>
</div>




<div class="row">
  <div class="page-header">
    <h3 class="page-header-title">Enrolled</h3>
  </div>

  <% if @enrolled_courses.empty? %>
    <h5 class="light">There are no courses listed.</h5>
  <% else %>
    <%= render @enrolled_courses %>
  <% end %>

</div>

<% if @instructed_courses.empty? %>
<% else %>
  <div class="row">
    <div class="page-header">
      <h3 class="page-header-title">Courses You Instruct</h3>
    </div>

    <% if @instructed_courses.empty? %>
      <h5 class="light">There are no courses listed.</h5>
    <% else %>
      <%= render @instructed_courses %>
    <% end %>

  </div>
<% end %>
