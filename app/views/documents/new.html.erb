<%= breadcrumbs([
      link_to('All Courses', courses_path),
      (link_to(@course.name, course_path(@course)) if @course) || "",
      (link_to(@capsule.name, course_capsule_path(@course, @capsule)) if @capsule) || "",
      (link_to(@lecture.name, course_capsule_lecture_path(@course, @capsule, @lecture)) if @lecture) || "",
      link_to('Add File', void, class: "current")
    ]) %>

<div class="landing">

  <div class="description">
    <h2>Add File to '<%= @container.name %>'</h2>
  </div>

  <div class="login">
    <%= form_for document_form(@document) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.file_field :file %>

      <%= f.text_field :description, placeholder: "Optional Description" %>

      <div><%= f.submit "Add File", class: "button small" %></div>

    <% end %>
  </div>

</div>