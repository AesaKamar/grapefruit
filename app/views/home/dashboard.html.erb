<div class="row">
  <div class="page-header">
    <h3 class="page-title">Welcome <%= current_user.display_identifier %>!</h3>
    <% if can? :manage_admins, User %>
      <p>You have administrator permissions.</p>
    <% end %>
    
  </div>  
</div>



<div class="row">
  <div class="page-header">
    <h3 class="page-header-title">Enrolled</h3>
  </div>

  <% if @enrolled_courses.empty? %>
    <h5 class="light">There are no courses listed.</h5>
  <% else %>
    <%= render @enrolled_courses %>
  <% end %>

</div>

<% if @instructed_courses.empty? %>
<% else %>
  <div class="row">
    <div class="page-header">
      <h3 class="page-header-title">Courses You Instruct</h3>
    </div>

    <% if @instructed_courses.empty? %>
      <h5 class="light">There are no courses listed.</h5>
    <% else %>
      <%= render @instructed_courses %>
    <% end %>

  </div>
<% end %>
