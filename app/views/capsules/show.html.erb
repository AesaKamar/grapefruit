<nav class="breadcrumbs">
  <%= link_to "All Courses", courses_path %>
  <%= link_to @course.name, course_path(@course) %>
  <a class="current" href="javascript:void(0)"><%= @capsule.name %></a>
</nav>
<h3><%= @capsule.name %></h3>

<div>
  <%= link_to "Add Lecture", new_course_capsule_lecture_path(@course, @capsule), :class => "button small" %>
  <%= link_to "Add Problem Set", new_course_capsule_problem_set_path(@course, @capsule), :class => "button small" %>
</div>

<table class="listing">
  <thead>
    <th>
      Lectures <%= "(None found)" if @lectures.empty? %>
    </th>
  </thead>
  <%= render @lectures %>
</table>

<table class="listing">
  <thead>
    <th>
      Problem Sets <%= "(None found)" if @problem_sets.empty? %>
    </th>
  </thead>
  <%= render @problem_sets %>
</table>